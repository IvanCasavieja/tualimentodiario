<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Single splash color + centered logo -->
    <style name="LaunchTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splash_bg</item>
        <item name="android:windowSplashScreenBackground">@color/splash_bg</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
    </style>
    <style name="NormalTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splash_bg</item>
        <item name="android:windowSplashScreenBackground">@color/splash_bg</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
    </style>
</resources>

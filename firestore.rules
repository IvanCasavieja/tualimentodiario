rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function signedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return signedIn() && request.auth.token.role == "admin";
    }

    match /dailyFoods/{docId} {
      allow read: if true;                     // lectura p√∫blica
      allow create, update, delete: if isAdmin();  // solo admins
    }

    match /users/{uid} {
      allow read, create, update: if signedIn() && request.auth.uid == uid;
    }

    match /users/{uid}/favorites/{foodId} {
      allow read, create, delete: if signedIn() && request.auth.uid == uid;
      allow update: if false;
    }

    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
